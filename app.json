{
  "name": "simplybetter",
  "scripts": {
    "postdeploy": "bundle exec rake db:setup"
  },
  "env": {
    "AWS_KEY": {
      "required": true
    },
    "AWS_SECRET": {
      "required": true
    },
    "ERROR_PAGE_URL": {
      "required": true
    },
    "HONEYBADGER_API_KEY": {
      "required": true
    },
    "MAINTENANCE_PAGE_URL": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    }
  },
  "addons": [
    "sentry",
    "bonsai",
    "heroku-postgresql",
    "newrelic"
  ]
}
