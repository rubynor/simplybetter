%h1 
  %i.fa.fa-edit
    Change your FAQ

.faq_form
  = form_for [@application, @faq], html: { role: 'form'} do |f|
    = f.label :question
    = f.text_field :question
    = f.label :answer
    = f.text_area :answer
    = f.button 'Save', name: 'save', method: 'put'
