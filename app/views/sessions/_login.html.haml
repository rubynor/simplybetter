%h1 Hello there
%p Please login using the form below
.info-box
  You need an account?
  = link_to('Create account', new_customer_path)

- if flash.notice
  .flash
    .success
      %span.glyphicon.glyphicon-ok
      = flash.notice
- if flash.alert
  .flash
    .error
      %span.glyphicon.glyphicon-remove
      = flash.alert

= form_tag @post_path, class: 'form-horizontal' do
  .field
    %label
      Email
    = text_field_tag :email, params[:email]
  .field
    %label
      %span.small(style='float: right;')
        = link_to 'Forgot password?', new_password_reset_path
      Password
    = password_field_tag :password, nil

  .checkbox-wrapper
    = check_box_tag :remember_me, 1, params[:remember_me]
    Remember me on this device

  .field
    .actions
      = submit_tag "LOG ME IN"
