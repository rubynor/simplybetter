%section#price.purple-section
  .site-content
    %h2 Price plans
    .pk-box
      .pk-left
        %p.pk-title Free
        %p.pk-price
        %p.pk-text
          %span Up to 500 users
      .pk-right
        = link_to new_customer_path, class: 'choose' do
          CHOOSE
      .clear
    .pk-box.pk-white-box
      .pk-left
        %p.pk-title Standard
        %p.pk-price
          %sup $
          49
          %sub /month
        %p.pk-text
          %span From 501 users to 1000 users.
      .pk-right
        %a.choose Coming later
      .clear
    .pk-box
      .pk-left
        %p.pk-title Plus
        %p.pk-price
          %sup $
          149
          %sub /month
        %p.pk-text
          %span From 1001 users to 3000 users
      .pk-right
        %a.choose Coming later
      .clear
    .pk-box.last
      .pk-left
        %p.pk-title Enterprise
        %p.pk-price
        %p.pk-text
          %span Let us customize the perfect solution for your business.
      .pk-right
        %a.choose Coming later
    .clear
