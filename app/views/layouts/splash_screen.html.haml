!!!
%html
  %head
    %title SimplyBetter
    = stylesheet_link_tag    "application", media: "all"
    = jquery_include_tag :jquery
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %body{class: "#{@current_controller} #{@current_action}"}
    #logo
      .logo
      .name
        Simply Better
    #navigation.compressed
    #content.compressed
      = yield

    = render 'shared/widget'
